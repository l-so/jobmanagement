            $('#modal-placeholder').empty();
        })
    });
    function dialogPurchInvModalEdit_save() {

    }
</script>
<style type="text/css">
    .cssPurchInvMoney {
        height: 26px;
        text-align: right;
        padding-right: 4px;
        width:120px;
    }

    .cssPurchInvInput {
        height: 26px;
    }

    .cssPurchInvInputAllRow {
        height: 26px;
        width: 100%;
        padding-left: 4px;
    }

    .cssPurchInvInputHalfRow {
        height: 26px;
        width: 50%;
        padding-left: 4px;
    }
    .cssPurchInvJobsRow {
        height: 26px;
    }
    .cssPurchInvDivRowLabel {
        display:table-row;
        margin-top:8px;
    }
