@model Job.WebMvc.Models.Person.EditDialogPartnerTaxPaymentModel
@{
    Layout = null;
}
<div id="modalMainDialog" class="w3-modal">
    <div class="w3-modal-content">
        <header class="w3-container w3-teal">
            <span onclick="close_ModalMainDialog()" class="w3-closebtn">&times;</span>
            <h4><span id="modalMainDialogTitle"></span></h4>
        </header>
        <div class="w3-container" style="padding-top:6px;">
            <div class="w3-row" style="margin-top:4px;">
                <div class="w3-col l2 m4 s6">Socio:</div><div class="w3-col l8 m6 s6">@Html.DropDownList("payTaxSocioId", Model.DDLPerson, new { @class = "w3-input" })</div>
            </div>
            <div class="w3-row" style="margin-top:4px;">
                <div class="w3-col l2 m4 s6">TASSE (Erario,tributi,...):</div><div class="w3-col l8 m6 s6">@Html.TextBox("payTaxTax", decimal.Zero, new { @class = "w3-input" })</div>
            </div>
            <div class="w3-row" style="margin-top:4px;">
                <div class="w3-col l2 m4 s6">INPS:</div><div class="w3-col l8 m6 s6">@Html.TextBox("payTaxInps", decimal.Zero, new { @class = "w3-input" })</div>
            </div>
            <div class="w3-row" style="margin-top:4px;">
                <div class="w3-col l2 m4 s6">ALTRO:</div><div class="w3-col l8 m6 s6">@Html.TextBox("payTaxOther", decimal.Zero, new { @class = "w3-input" })</div>
            </div>
            <div class="w3-row" style="margin-top:4px;">
                <div class="w3-col l2 m4 s6">Data:</div><div><div class="w3-col l8 m6 s6">@Html.TextBox("payTaxDate", string.Format("{0:yyyy-MM-dd}", System.DateTime.Now), new { @class = "w3-input", @type = "date" })</div></div>
            </div>
            <div class="w3-row" style="margin-top:4px;">
                <div class="w3-col l2 m4 s6">Banca:</div><div class="w3-col l8 m6 s6">@Html.DropDownList("payTaxBankId", Model.DDLBankAccount, new { @class = "w3-input" })</div>
            </div>
        </div>
        <footer class="w3-container w3-border-top w3-light-grey" style="margin-top:12px;padding-top:6px;padding-bottom:12px;">
            <button onclick="delete_ModalMainDialog();" type="button" class="w3-left w3-btn w3-red">Cancella</button>
            <button onclick="save_ModalMainDialog();" type="button" class="w3-right w3-btn w3-green" style="margin-left:24px;">Salva</button>
            <button onclick="close_ModalMainDialog();" type="button" class="w3-right w3-btn w3-yellow">Annulla</button>
        </footer>
    </div>
</div>
<script type="text/javascript">
    function open_ModalMainDialog() {
        $('#modalMainDialogTitle').html('Pagmento tasse,inps,.. per conto del socio');
        document.getElementById('modalMainDialog').style.display = 'block';
    }
    function close_ModalMainDialog() {
        document.getElementById('modalMainDialog').style.display = 'none';
        $('#modal-placeholder').empty();
    }
    function delete_ModalMainDialog() {
        alert('Non serve a nulla...ma vedremo!');
    }
    open_ModalMainDialog();
</script>
