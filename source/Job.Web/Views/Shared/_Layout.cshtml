<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Applicazione ASP.NET</title>
    <link href="~/Content/w3.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    @RenderSection("headSection", required: false)
</head>
<body>
    <div style="height:6px;background-color:#ea5d05;"></div>
    <div class="w3-container">
        <ul class="w3-navbar w3-light-grey">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li><a href="#">Link 1</a></li>
            <li class="w3-dropdown-hover">
                <a href="#">Commesse</a>
                <div class="w3-dropdown-content w3-white w3-card-4">
                    <a href="#">Elenco commesse</a>
                    <a href="#">Nuova commessa...</a>
                    <a href="#">Elenco lavoro svolto</a>
                    <a href="#">Rendiconta attività...</a>
                </div>
            </li>
            <li class="w3-dropdown-hover">
                <a href="#">Persone</a>
                <div class="w3-dropdown-content w3-white w3-card-4">
                    <a href="#" onclick="$('#modal-placeholder').load('@Url.Content("~/Person/EditDialogPartnerTaxPayment")');">SOCI - Tasse,INPS,...</a>
                    @Html.ActionLink("Richieste di rimborso", "PaymentRefoundRequestList", "Person")
                </div>
            </li>
            <li class="w3-dropdown-hover">
                <a href="#">Configurazione</a>
                <div class="w3-dropdown-content w3-white w3-card-4">
                    <a href="#">Link 1</a>
                    <a href="#">Link 2</a>
                    @Html.ActionLink("Utenti", "Index", "IdentityUsers")
                </div>
            </li>
            <li class="w3-dropdown-hover w3-right">
                <a class="w3-green" href="#">Lorenzo Soncini</a>
                <div class="w3-dropdown-content w3-white w3-card-4">
                    <a href="#">Profilo</a>
                    <a href="#">Reset parola di passaggio</a>
                    @Html.ActionLink("Esci", "Logout", "Home")
                </div>
            </li>
        </ul>
    </div>
    <div id="modal-placeholder"><!--Dialog place holder--></div>
    @RenderBody()
    @RenderSection("bodySectionBottom", required: false)
</body>
</html>
